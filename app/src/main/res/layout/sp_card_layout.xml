<android.support.v7.widget.CardView
    android:id="@+id/android_internal_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardBackgroundColor="@android:color/holo_green_light"
    card_view:cardCornerRadius="@dimen/cards_corner_radius"
    card_view:cardElevation="@dimen/cards_elevation"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="@dimen/cards_content_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="26sp"
            android:text="Sample"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>